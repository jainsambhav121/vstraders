
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product."
        },
        "brand": {
          "type": "string",
          "description": "The brand of the product."
        },
        "basePrice": {
          "type": "number",
          "description": "The base price of the product before discounts."
        },
        "discount": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["percentage", "flat"]
            },
            "value": {
              "type": "number"
            }
          }
        },
        "category": {
          "type": "string",
          "description": "The category slug of the product.",
          "enum": ["mattress", "pillow", "covers"]
        },
        "stock": {
          "type": "number",
          "description": "The total stock quantity of the product."
        },
        "images": {
          "type": "array",
          "description": "A list of image URLs for the product.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "primaryImage": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the primary image."
        },
        "variants": {
          "type": "array",
          "description": "Different versions of the product (e.g., by size, color).",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "size": { "type": "string" },
              "thickness": { "type": "string" },
              "material": { "type": "string" },
              "color": { "type": "string" },
              "price": { "type": "number" },
              "stock": { "type": "number" }
            }
          }
        },
        "details": {
          "type": "array",
          "description": "A list of key-value pairs for product specifications.",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "value": { "type": "string" }
            }
          }
        },
        "status": {
          "type": "object",
          "properties": {
            "isEnabled": { "type": "boolean" },
            "isFeatured": { "type": "boolean" },
            "isBestSeller": { "type": "boolean" }
          }
        },
        "seo": {
          "type": "object",
          "properties": {
            "slug": { "type": "string" },
            "title": { "type": "string" },
            "metaDescription": { "type": "string" },
            "keywords": { "type": "array", "items": { "type": "string" } }
          }
        },
        "rating": {
          "type": "number"
        },
        "reviewCount": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "basePrice", "category", "stock", "images", "primaryImage", "createdAt", "updatedAt"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer order.",
      "type": "object",
      "properties": {
        "orderId": { "type": "string" },
        "customerDetails": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": "string" },
            "address": { "type": "string" }
          }
        },
        "products": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            }
          }
        },
        "totalAmount": { "type": "number" },
        "paymentStatus": { "type": "string" },
        "orderStatus": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "User": {
      "title": "User",
      "description": "Represents a user account.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["admin", "manager"] },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Banner": {
      "title": "Banner",
      "description": "Represents a homepage banner.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "isActive": { "type": "boolean" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "FaqItem": {
      "title": "FAQ Item",
      "description": "A single frequently asked question and its answer.",
      "type": "object",
      "properties": {
        "question": {
          "type": "string",
          "description": "The question."
        },
        "answer": {
          "type": "string",
          "description": "The answer to the question."
        }
      },
      "required": ["question", "answer"]
    },
    "HomepageContent": {
      "title": "Homepage Content",
      "description": "Content for the homepage sections.",
      "type": "object",
      "properties": {
        "heroText": { "type": "string" },
        "brandTagline": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "faqs": {
          "type": "array",
          "description": "A list of frequently asked questions.",
          "items": {
            "$ref": "#/entities/FaqItem"
          }
        }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores individual product details."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores customer order information."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile and role information."
    },
    "/banners/{bannerId}": {
      "schema": { "$ref": "#/entities/Banner" },
      "description": "Stores homepage banners."
    },
    "/homepageContent/main": {
      "schema": { "$ref": "#/entities/HomepageContent" },
      "description": "Stores content for the homepage."
    }
  }
}
